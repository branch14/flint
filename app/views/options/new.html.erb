<h1>New option</h1>

<% form_for(@option) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </p>
  <p>
    <%= f.label :template %><br />
    <%= f.check_box :template %>
  </p>
  <p>
    <%= f.label :procedure %><br />
    <%= f.text_area :procedure, :size => '120x20' %>
  </p>
  <p>
    <%= f.label :expired_at %><br />
    <%= f.datetime_select :expired_at %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', options_path %>
